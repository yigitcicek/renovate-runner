{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    "docker:enableMajor"
  ],
  "assignees": ["rarkins", "viceice"],
  "gitLabAutomerge": true,
  "packageRules": [
    {
      "packageNames": [
        "renovate/renovate"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "packageNames": [
        "docker"
      ],
      "updateTypes": [
        "patch"
      ],
      "separateMinorPatch": true,
      "automerge": true
    }
  ],
  "gitlabci": {
    "fileMatch": [
      "\\.gitlab-ci\\.yml$"
    ]
  }
}
